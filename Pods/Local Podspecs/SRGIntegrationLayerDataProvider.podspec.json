{
  "name": "SRGIntegrationLayerDataProvider",
  "version": "4.0.0",
  "summary": "Data Provider using the Integration Layer for the SRG Media Player",
  "description": "This is the implementation of the Data Provider using the Integration Layer. It is a generic data provider and it\nis not mandatory to use or have the media player to use the data provider. When used with the media player, it is\nan easy drop in your project. Moreover, an optional module allow you to also use that provider for storing offline\nmetadatas from Medias and Shows. It can be used to implement a 'favorites' feature in an app.",
  "homepage": "http://rts.ch",
  "license": {
    "type": "N/A"
  },
  "authors": {
    "Cédric Foellmi": "cedric@onekilopars.ec",
    "Cédric Luthi": "cedric.luthi@rts.ch",
    "Pierre-Yves bertholon": "py.bertholon@gmail.com"
  },
  "source": {
    "git": "git@bitbucket.org:rtsmb/srgintegrationlayerdataprovider-ios.git",
    "tag": "4.0.0"
  },
  "platforms": {
    "ios": "8.0"
  },
  "requires_arc": true,
  "resource_bundles": {
    "SRGILDataProvider": [
      "SRGIntegrationLayerDataProvider/SRGILDataProviderBundle/*.lproj"
    ]
  },
  "default_subspecs": "Core",
  "subspecs": [
    {
      "name": "Core",
      "source_files": [
        "SRGIntegrationLayerDataProvider/SRGIntegrationLayerDataProvider.h",
        "SRGIntegrationLayerDataProvider/Core/*.{h,m}",
        "SRGIntegrationLayerDataProvider/Model/*.{h,m}",
        "SRGIntegrationLayerDataProvider/Network/*.{h,m}"
      ],
      "private_header_files": "SRGIntegrationLayerDataProvider/**/*+Private.h",
      "frameworks": [
        "Foundation",
        "UIKit"
      ],
      "dependencies": {
        "CocoaLumberjack": [
          "~> 2.0.0"
        ],
        "SGVReachability": [
          "~> 1.0.0"
        ],
        "libextobjc/EXTScope": [
          "0.4.1"
        ]
      }
    },
    {
      "name": "MediaPlayer",
      "default_subspecs": "Core",
      "subspecs": [
        {
          "name": "Core",
          "source_files": [
            "SRGIntegrationLayerDataProvider/SRGILDataProviderMediaPlayerDataSource.h",
            "SRGIntegrationLayerDataProvider/MediaPlayer/*.{h,m}"
          ],
          "frameworks": [
            "Foundation",
            "UIKit"
          ],
          "dependencies": {
            "SRGIntegrationLayerDataProvider/Core": [

            ],
            "SRGMediaPlayer": [
              "~> 1.8.0"
            ]
          }
        },
        {
          "name": "Analytics",
          "source_files": [
            "SRGIntegrationLayerDataProvider/SRGILDataProviderAnalyticsDataSource.h",
            "SRGIntegrationLayerDataProvider/Analytics/*.{h,m}"
          ],
          "frameworks": [
            "Foundation",
            "UIKit"
          ],
          "dependencies": {
            "SRGIntegrationLayerDataProvider/MediaPlayer/Core": [

            ],
            "SRGAnalytics": [
              "~> 1.4.16"
            ],
            "SRGAnalytics/MediaPlayer": [
              "~> 1.4.16"
            ]
          }
        }
      ]
    }
  ]
}
